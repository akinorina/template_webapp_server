{% extends '../../layouts/layout.njk' %}

{% block body %}
  <style>
    //
    .image {
      background: red;
    }
    .image__image {
      width: 350px;
      height: 350px;
      border: 10px #f0f0f0 solid;
      display: flex;
      justify-content: center;
    }
    .image__image__image {
      width: 350px;
      height: fit-content;
    }

    .image__upload {
    }
    .image__upload__input {
    }

    .image__name {
    }
    .image__name__input {
    }

    .drag-area{
      padding: 30px 0;
      width: 100%;
      margin: 0 auto 20px;
      background: #f6f6f6;
      text-align: center;
    }
    .drag-area.drag{
      background: #f08080;
    }

    .drag-area input {
       margin:0 auto;
    }

  </style>

  <h1>管理画面</h1>
  <p>/management/image/detail</p>

  <div class="image">
      <div class="image__id">
        ID: {{ Image.id }}
      </div>
      <div class="image__name">
        画像名: {{ Image.fileName }} ( {{ Image.fileMimetype }} )
      </div>
      <div class="image__image">
        <img class="image__image__image" id="image__image__image" src="{{ Image.fileUrl }}" />
      </div>

      <button onclick="location.href='/management/image'; return false;">&lt;&lt; 戻る</button>
      <button onclick="location.href='/management/image/{{ Image.id }}/edit'; return false;">編集</button>
      <button onclick="location.href='/management/image/{{ Image.id }}/delete'; return false;">削除</button>
  </div>

  <hr>
  <ul>
    <li><a href="/management/image">一覧へ戻る</a></li>
  </li>

{% endblock %}
